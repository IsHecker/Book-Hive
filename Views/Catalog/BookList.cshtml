@model IEnumerable<Book>

@foreach (var book in @Model)
{
    <div class="col-md-3">
        <div class="card mb-4">
            @* <img src="@book.PosterUrl" class="card-img-top" alt="Book Title"> *@
            <img src="@book.PosterUrl" alt="" class="img-fluid mt-3" style=" max-height: 400px; object-fit: contain; ">
            <div class="card-body">
                <h5 class="card-title">@book.Title</h5>
                <p class="card-text">@book.Description</p>
                <a href="/catalog/bookdetails/@book.Id" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
}