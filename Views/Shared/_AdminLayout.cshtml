<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - BookHive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <style>
        .disabled-link {
            pointer-events: none; /* Disables click events */
            background: gray; /* Makes it visually disabled */
            color: white;
            text-decoration: none; /* Optional: Removes underline */
            cursor: not-allowed; /* Optional: Shows 'not-allowed' cursor */
        }
    </style>
    @* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
    <script src="/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">BookHive Admin</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Admin">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container mt-4">
    @RenderBody()
</div>
</body>
</html>
